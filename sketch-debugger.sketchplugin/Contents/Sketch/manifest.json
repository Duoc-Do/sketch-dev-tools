{
  "compatibleVersion": 3,
  "bundleVersion": 1,
  "description": "Debug Sketch from within Sketch with this Sketch plugin.",
  "identifier": "skpm.debugger",
  "commands": [
    {
      "name": "Show debugger",
      "identifier": "skpm.debugger.show-debugger",
      "icon": "icon.png",
      "description": "Open Sketch debugger window.",
      "script": "show-debugger.js",
      "shortcut": "cmd ctrl i"
    },
    {
      "name": "Catch all actions",
      "identifier": "skpm.debugger.catch-all-actions",
      "script": "catch-all-actions.js",
      "handlers": {
        "actions": {
          "*": "onAction"
        }
      }
    },
    {
      "name": "test log",
      "identifier": "skpm.debugger.test-log",
      "icon": "icon.png",
      "description": "Creates a test log in the debugger.",
      "script": "test-log.js"
    }
  ],
  "menu": {
    "title": "⚙️ Debugger",
    "items": [
      "skpm.debugger.show-debugger",
      "skpm.debugger.test-log"
    ]
  },
  "version": "0.1.6",
  "name": "sketch-debugger",
  "disableCocoaScriptPreprocessor": true,
  "appcast": "https://raw.githubusercontent.com/skpm/sketch-debugger/master/.appcast.xml"
}